<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:maxHeight="1677px"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/gradient"
    android:clickable="true">



    <!--Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_sensor_button"
        android:id="@+id/start_sensor_button"
        android:onClick="startSensing"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_map_button"
        android:id="@+id/open_map_button"
        android:layout_above="@+id/start_sensor_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:onClick="openMap"/-->

    <ImageView
        android:layout_width="232sp"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:scaleType="fitStart"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="252.5sp"
        android:layout_height="match_parent"
        android:id="@+id/imageView2"
        android:src="@drawable/chooseyourridingexp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitStart"
        android:layout_marginTop="100sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200sp"
        android:orientation="vertical"
        android:layout_alignParentBottom = "true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:id="@+id/open_map_button"
            android:src="@drawable/guideme"
            android:layout_marginTop="10sp"
            android:onClick="openMap" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:id="@+id/start_sensor_button"
            android:onClick="startSensing"
            android:layout_marginTop="10sp"
            android:src="@drawable/keepmesafe" />
    </LinearLayout>

</RelativeLayout>
