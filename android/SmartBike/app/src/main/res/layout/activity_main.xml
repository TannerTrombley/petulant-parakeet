    <ImageView
        android:layout_width="232sp"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:scaleType="fitStart"
        android:layout_marginTop="100sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="252.5sp"
        android:layout_height="match_parent"
        android:id="@+id/imageView2"
        android:src="@drawable/chooseyourridingexp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitStart"
        android:layout_marginTop="200sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:id="@+id/open_map_button"
        android:src="@drawable/mapbutton"
        android:onClick="openMap"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/start_sensor_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp" />

    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:id="@+id/start_sensor_button"
        android:onClick="startSensing"
        android:src="@drawable/nomapbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/open_map_button"
        android:layout_alignStart="@+id/open_map_button" />

    <ImageView
        android:layout_width="245sp"
        android:layout_height="18sp"
        android:id="@+id/imageView3"
        android:src="@drawable/justkeepmesafe"
        android:layout_alignTop="@+id/start_sensor_button"
        android:layout_toRightOf="@+id/start_sensor_button"
        android:layout_toEndOf="@+id/start_sensor_button"
        android:layout_marginTop="26dp" />

    <ImageView
        android:layout_width="210sp"
        android:layout_height="19sp"
        android:id="@+id/imageView4"
        android:src="@drawable/guidemethere"
        android:layout_marginBottom="29dp"
        android:layout_alignBottom="@+id/open_map_button"
        android:layout_toRightOf="@+id/open_map_button"
        android:layout_toEndOf="@+id/open_map_button"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />


</RelativeLayout>
